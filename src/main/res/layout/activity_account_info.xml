<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp"
    android:background="@color/colorRVBackground"
    tools:context=".activities.AccountInfoActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:src="@drawable/add"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewIcon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewLoginLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login:"
                app:layout_constraintTop_toBottomOf="@+id/imageViewIcon"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"/>
            <TextView
                android:id="@+id/textViewLoginValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                app:layout_constraintTop_toBottomOf="@+id/imageViewIcon"
                app:layout_constraintStart_toEndOf="@id/textViewLoginLabel"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"/>
            <TextView
                android:id="@+id/textViewPasswordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password:"
                app:layout_constraintTop_toBottomOf="@+id/textViewLoginLabel"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/textViewPasswordValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="password"
                app:layout_constraintTop_toBottomOf="@+id/textViewLoginValue"
                app:layout_constraintStart_toEndOf="@id/textViewPasswordLabel"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/textViewPasswordValue"
                app:layout_constraintTop_toBottomOf="@id/textViewLoginValue"
                app:layout_constraintBottom_toTopOf="@+id/textViewEmailValue"
                android:layout_marginLeft="20dp"
                android:onClick="hidePasswordAsString"
                android:src="@drawable/ic_remove_red_eye_black_24dp"></ImageView>

            <TextView
                android:id="@+id/textViewEmailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                app:layout_constraintTop_toBottomOf="@+id/textViewPasswordLabel"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/textViewEmailValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"
                app:layout_constraintTop_toBottomOf="@+id/textViewPasswordValue"
                app:layout_constraintStart_toEndOf="@id/textViewEmailLabel"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/textViewTextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Заметки:"
                app:layout_constraintTop_toBottomOf="@+id/textViewEmailLabel"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"/>
            <TextView
                android:id="@+id/textViewTextValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Заметки:"
                app:layout_constraintTop_toBottomOf="@+id/textViewEmailValue"
                app:layout_constraintStart_toEndOf="@id/textViewTextLabel"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"/>
            <TextView
                android:id="@+id/textViewPhoneLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Номер телефона:"
                app:layout_constraintTop_toBottomOf="@+id/textViewTextLabel"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"/>
            <TextView
                android:id="@+id/textViewPhoneValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Телефон"
                app:layout_constraintTop_toBottomOf="@+id/textViewTextValue"
                app:layout_constraintStart_toEndOf="@+id/textViewPhoneLabel"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"/>
            <TextView
                android:id="@+id/textViewAccountTypeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Тип аккаунта:"
                app:layout_constraintTop_toBottomOf="@+id/textViewPhoneLabel"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"/>
            <TextView
                android:id="@+id/textViewAccountTypeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Type"
                app:layout_constraintTop_toBottomOf="@+id/textViewPhoneValue"
                app:layout_constraintStart_toEndOf="@+id/textViewAccountTypeLabel"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>